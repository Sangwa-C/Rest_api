
{{#partial "content"}}

    <div class="well" style="margin-top:180px;">
        <center>
            <h1>Track Users!</h1>
            <small>~For every minute spent organizing, an hour is earned~</small>

        </center><br><br>

        <center>
            <form action="/Users_list" method="post">

                <div class="form-group">
                    <label for="name"> User's Name</label>
                    <input id="name" name="name" type="text" class="form-control" >
                </div>

                <div class="form-group">
                    <label for="title"> User's Title</label>
                    <input id="title" name="title" type="title" class="form-control" >
                </div>

                <div class="form-group">
                    <label for="duty"> User's Duty</label>
                    <input id="duty" name="duty" type="duty" class="form-control" >
                </div>

                <div class="form-group-block">
                    <label for="dname"> User's Department</label><br>
                    <select name="dname" id="dname" style=" padding:10px; padding-right: 170px; border-radius:5px; color:black; text-align:center; ">
                        {{#each department}}

                            <option value="{{ dname }}">{{ dname }}</option>

                        {{/each}}
                    </select><br><br>
                </div>

                <button type="submit" class="btn btn-success">Add User</button><br><br>

            </form>

            <p>View <a href="/Users_list">User's List</a></p>
        </center>
    </div>5

{{/partial}}

